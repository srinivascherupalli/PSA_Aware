                           <script type="text/javascript">
                        
                              var campaignCheckStatus = function(res){
                   
                                if(res!=''){
                                   var objMap = JSON.parse(res);
                                    console.log('key ==> ', objMap);
                                    for (var key in objMap) {
                                        if ( objMap.hasOwnProperty(key) ) {
                                            if(objMap[key] == 'Attending' ){
                                                jQuery('#lrnId-'+key).text('Registered').addClass('btnLlaunchDisabled').prop('disabled',true);
                                            }
                                            if(objMap[key] == 'Checked in'){
                                                jQuery('#lrnId-'+key).text('Completed').addClass('btnLlaunchDisabled').prop('disabled',true);;
                                            }
                                           
                                        }
                                    }
                                }
      
                              }
                              campaignCheckStatus('{!strJson}'); 

