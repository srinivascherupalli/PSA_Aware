<apex:page docType="html-5.0" controller="LMSBaseController" sidebar="false" showHeader="{!showSFHeader}" standardStylesheets="false">

    <apex:composition template="LMS_Template">

        <apex:define name="head">
            <title>{!$Label.ALMS_Learning_Home}</title>
        </apex:define>

        <apex:define name="body">

            <div class="trainingplan-container slds-grid slds-wrap slds-grid--pull-padded" style="padding:0 1rem;">
                <div class="slds-p-horizontal--small slds-size--1-of-1 slds-medium-size--6-of-12 slds-large-size--4-of-12 launch-wrapper" item-url="{!$Page.MyTraining}">
                    <div class="tplan_box tplan_box_home">
                        <div class="tplan_img">
                            <apex:image value="{!URLFOR($Resource.almond_uilib, '/img/mytraining.png')}"/>
                        </div>
                        <div class="tplan_details tplan_details_home">
                            <h3 class="slds-text-heading--medium">{!$Label.ALMS_My_Training}</h3>
                        </div>
                    </div>
                </div>
                <div class="slds-p-horizontal--small slds-size--1-of-1 slds-medium-size--6-of-12 slds-large-size--4-of-12 launch-wrapper" item-url="{!$Page.MyProfile}">
                    <div class="tplan_box tplan_box_home">
                        <div class="tplan_img">
                            <apex:image value="{!URLFOR($Resource.almond_uilib, '/img/achievements.png')}"/>
                        </div>
                        <div class="tplan_details tplan_details_home" >
                            <h3 class="slds-text-heading--medium">{!$Label.ALMS_Achievements}</h3>
                        </div>
                    </div>
                </div>
                <div class="slds-p-horizontal--small slds-size--1-of-1 slds-medium-size--6-of-12 slds-large-size--4-of-12 launch-wrapper" item-url="{!$Page.TrainingCatalogHome}">
                    <div class="tplan_box tplan_box_home">
                        <div class="tplan_img">
                            <apex:image value="{!URLFOR($Resource.almond_uilib, '/img/catalogs.png')}"/>
                        </div>
                        <div class="tplan_details tplan_details_home" >
                            <h3 class="slds-text-heading--medium">{!$Label.ALMS_Training_Catalog}</h3>
                        </div>
                    </div>
                </div>
                <div class="slds-p-horizontal--small slds-size--1-of-1 slds-medium-size--6-of-12 slds-large-size--4-of-12 launch-wrapper" item-url="{!$Page.TrainingTracks}">
                    <div class="tplan_box tplan_box_home">
                        <div class="tplan_img">
                            <apex:image value="{!URLFOR($Resource.almond_uilib, '/img/tracks.png')}"/>
                        </div>
                        <div class="tplan_details tplan_details_home" >
                            <h3 class="slds-text-heading--medium">{!$Label.ALMS_Training_Tracks}</h3>
                        </div>
                    </div>
                </div>
            </div>

            <apex:actionStatus id="status">
                <apex:facet name="start">
                    <apex:outputPanel >
                        <c:LMSStatus statusComponentId="{!$Component.status}"/>
                    </apex:outputPanel>
                </apex:facet>
            </apex:actionStatus>

            <script>
                jQuery(document).ready(function($){
                    $(document.body).delegate('.launch-wrapper', 'click', function(){
                        var itemUrl = $(this).attr('item-url');
                        almond.redirectHandlerWithStatus(itemUrl,true);
                    });
                });
                 jQuery(document).ready(function($){
                    $(document.body).delegate('.tplan_box_register', 'click', function(){
                        var trackId = $(this).attr('lms-data-trackId');
                        //Retain navigation history
                        almond.redirectHandlerWithStatus('{!$Page.TrainingTrackDetail}?id='+trackId,true);
                    });
                }); 
            </script>

        </apex:define>

    </apex:composition>
</apex:page>